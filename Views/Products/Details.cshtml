@model WEB_Shop_Ajax.Models.Product
@using WEB_Shop_Ajax.Models
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
    </dl>
    
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model.Images)
            {
                <div class="carousel-item ">
                    <img src="/Images/@Html.DisplayFor(model => model.Brand)/@Html.DisplayFor(model => model.Model)/@item.Name" class="d-block" style="width: 210px;height: 260px;" alt="...">
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Предыдущий</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Следующий</span>
        </button>
        <div class="carousel-indicators">
            
            @for (int i = 1; i <= Model.Images.Count; i++)
            { 
                <button class="carousel-indicators-child" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@(i-1)" aria-label="Slide @i">
                    <img src="/Images/@Html.DisplayFor(model => model.Brand)/@Html.DisplayFor(model => model.Model)/@Model.Images[i-1].Name" class="d-block w-100 carousel-small-image" alt="...">
                </button>            
             }
        </div>
       

    </div>
    
</div>
