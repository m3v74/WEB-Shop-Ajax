@using WEB_Shop_Ajax.Models
@model WEB_Shop_Ajax.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row editproduct">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Products" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Model" />
            <input type="hidden" asp-for="Brand" />
            <input type="hidden" asp-for="Images"  class="saveimg form-control" />
            <input type="hidden" id="delimg" name="delimg" value="" class="form-control"/>
           
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images"  type="file"  name="uploadedFiles" class="form-control input-image" />
                <a class="add-input-image btn btn-primary" style="margin-top:10px"> Добавить изображение </a>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group span-img-group">
                @foreach (Image item in Model.Images)
                {
                    <div class="span-img">
                        <span class="image-edit-product" style="cursor:pointer">X</span>
                        <img src="/Images/@Html.DisplayFor(model => model.Brand)/@Html.DisplayFor(model => model.Model)/@item.Name" value="@item.Name" data-status="save" class=" image-edit-product" alt="...">
                    </div>
                }
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary save-to-edit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

